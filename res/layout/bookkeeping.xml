<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="wrap_content"
	android:layout_height="wrap_content">
	<TextView android:text="@string/bookkeeping_title"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:textColor="#FFFFFFFF" android:gravity="center"
		android:textSize="30px" />
	<ScrollView android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<TableLayout android:layout_width="match_parent"
			android:layout_height="wrap_content" android:stretchColumns="1">
			<TableRow android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView android:text="@string/date" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:textColor="#FFFFFFFF"
					android:gravity="center" android:textSize="22px" />
				<EditText android:id="@+id/date_input"
					android:layout_marginLeft="10dip" android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<ImageButton android:src="@drawable/calendar"
					android:id="@+id/show_date_btn" android:layout_marginLeft="10dip"
					android:layout_width="wrap_content" android:layout_height="wrap_content" />
			</TableRow>
			<TableRow android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView android:text="@string/consumer_string"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textColor="#FFFFFFFF" android:gravity="center"
					android:textSize="22px" />
				<Spinner android:id="@+id/consumer_spinner"
					android:layout_marginLeft="10dip" android:layout_width="fill_parent"
					android:layout_height="wrap_content" />
				<TextView android:id="@+id/relationship_with_user"
					android:layout_marginLeft="10dip" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:textColor="#FFFFFFFF"
					android:gravity="center" android:textSize="22px" />
			</TableRow>
			<TableRow android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView android:text="@string/item" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:textColor="#FFFFFFFF"
					android:gravity="center" android:textSize="22px" />
				<Spinner android:id="@+id/item_spinner"
					android:layout_marginLeft="10dip" android:layout_width="fill_parent"
					android:layout_height="wrap_content" />
			</TableRow>
			<TableRow android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView android:text="@string/amount"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textColor="#FFFFFFFF" android:gravity="center"
					android:textSize="22px" />
				<EditText android:id="@+id/amount_input"
					android:layout_marginLeft="10dip" android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			</TableRow>
			<TableRow android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView android:text="@string/reimbursement" android:id="@+id/reimbursement"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textColor="#FFFFFFFF" android:gravity="center"
					android:textSize="22px" />
				<CheckBox android:text="" android:id="@+id/reimbursement_check_box"
					android:layout_marginLeft="10dip" android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			</TableRow>
			<TableRow android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView android:text="@string/description"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textColor="#FFFFFFFF" android:gravity="center"
					android:textSize="22px" />
				<EditText android:id="@+id/description_input"
					android:layout_marginLeft="10dip" android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			</TableRow>
			<TableRow android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<Button android:id="@+id/bk_submit_btn" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:layout_gravity="center"
					android:text="@string/confirm_yes" />
				<Button android:id="@+id/bk_back_btn" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:layout_gravity="center"
					android:text="@string/back" />
			</TableRow>
		</TableLayout>



	</ScrollView>
</LinearLayout>
