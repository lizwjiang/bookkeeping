<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
	<LinearLayout android:layout_width="fill_parent"
  				android:layout_height="wrap_content">
  		<TextView  android:layout_width="fill_parent" android:gravity="center_horizontal" android:textSize="30dip"
  				   android:layout_height="wrap_content"
  				   android:text="@string/global_param_title"
  				   android:paddingTop="10dip"/>
  	</LinearLayout>
  	<TableLayout 
    	android:layout_width="match_parent" 
    	android:layout_height="wrap_content" 
    	android:id="@+id/tableLayout_globalparam"
    	android:stretchColumns="1">
        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
        	<TextView android:text="@string/single_max_amount" android:id="@+id/tv_single_max_amount" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        	<EditText android:text="" android:id="@+id/single_max_amount" android:digits="1234567890." android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </TableRow>
       	<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
        	<TextView android:text="@string/weekly_max_amount" android:id="@+id/tv_weekly_max_amount" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        	<EditText android:text="" android:id="@+id/weekly_max_amount" android:digits="1234567890." android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </TableRow>
     	<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
        	<TextView android:text="@string/monthly_max_amount" android:id="@+id/tv_monthly_max_amount" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        	<EditText android:text="" android:id="@+id/monthly_max_amount" android:digits="1234567890." android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
        	<Button android:text="@string/submit" android:id="@+id/gp_submit" android:layout_span="3" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </TableRow> 
    </TableLayout>

</LinearLayout>
